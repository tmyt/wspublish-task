{
  "id": "8e807690-3833-11e6-ba0a-fb60ce5e65ae",
  "name": "wspublish",
  "friendlyName": "Windows Store Publish",
  "description": "Publish the package to Windows Store",
  "author": "Me",
  "helpMarkDown": "Replace with markdown to show in help",
  "category": "Package",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [],
  "version": {
    "Major": "0",
    "Minor": "1",
    "Patch": "14"
  },
  "minimumAgentVersion": "1.95.0",
  "instanceNameFormat": "wspublish $(message)",
  "inputs": [
    {
      "name": "clientId",
      "type": "string",
      "label": "Azure AD Client ID",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Azure AD Client ID for submission"
    },
    {
      "name": "clientSecret",
      "type": "string",
      "label": "Azure AD Client Secret",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Application ID for submission"
    },
    {
      "name": "tenantId",
      "type": "string",
      "label": "Tenant ID",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Azure AD Tenant ID for submission"
    },
    {
      "name": "appId",
      "type": "string",
      "label": "Application ID",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Application ID for submission"
    },
    {
      "name": "deploymentTarget",
      "type": "pickList",
      "label": "Deployment Target",
      "defaultValue": "PF",
      "required": true,
      "helpMarkDown": "Application ID for submission",
      "options": {
          "Package Flight": "PF",
          "General Release": "GA"
    },
    {
      "name": "flightName",
      "type": "string",
      "label": "Flight Name",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Flight Name for submission",
      "visibleRule": "deploymentTarget = PF"
    },
    {
      "name": "packagesSource",
      "type": "string",
      "label": "Packages Source",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Path to folder that contains packages"
    }
  ],
  "execution": {
    "Node": {
      "target": "task/task.js",
      "argumentFormat": ""
    }
  }
}
